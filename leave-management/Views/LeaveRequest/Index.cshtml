@model AdminLeaveRequestViewVM

@{ ViewData["Title"] = "Index"; }


<div class="row">
    <div class="col-md-3">
        <div class="info-box text-center">
            <span class="info-box-icon bg-info"><i class="fas fa-tachometer-alt"></i></span>

            <div class="info-box-content">
                <h1 class="card-title">@Model.TotoalRequsets</h1>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.TotoalRequsets)</h5>
            </div>
            <!-- /.info-box-content -->
        </div>

    </div>
    <div class="col-md-3">
        <div class="info-box text-center">
            <span class="info-box-icon bg-warning"><i class="fas fa-exclamation-circle"></i></span>

            <div class="info-box-content">
                <h1 class="card-title text-warning">@Model.PendingRequsets</h1>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.PendingRequsets)</h5>
            </div>
            <!-- /.info-box-content -->
        </div>

    </div>
    <div class="col-md-3">
        <div class="info-box text-center">
            <span class="info-box-icon bg-success"><i class="far fa-check-circle"></i></span>
             
            <div class="info-box-content">
                <h1 class="card-title text-success">@Model.ApprovedRequsets</h1>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.ApprovedRequsets)</h5>
            </div>
            <!-- /.info-box-content -->
        </div>

    </div>
    <div class="col-md-3">
        <div class="info-box text-center">
            <span class="info-box-icon bg-danger"><i class="far fa-times-circle"></i></span>

            <div class="info-box-content">
                <h1 class="card-title text-danger">@Model.RejectedRequsets</h1>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.RejectedRequsets)</h5>
            </div>
            <!-- /.info-box-content -->
        </div>

    </div>
</div>

<br>
<br>

<hr>
<h1>Leave Request Log</h1>
<hr>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Leave Type
            </th>
            <th>
                Date Requested
            </th>

            <th>
                Approval Status
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveRequests)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RequestingEmployee.Firstname) @Html.DisplayFor(modelItem => item.RequestingEmployee.Lastname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LeaveType.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateRequested)
    </td>
    <td>
            @if (item.Approved == true)
             {
            <span class="badge badge-success">Approved</span>
             }

                else if (item.Approved == false)
                {
<span class="badge badge-danger">Rejected</span> }
                else
                {
<span class="badge badge-warning">Pending Approval</span>   
        }
    </td>
    <td>

<a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
    <i class="fa fa-file"></i>Review
</a>                


    </td>
</tr>}
    </tbody>
</table>